{% extends 'base.html.twig' %}

{% block title %}Gestion des thèmes - Projet Enigma{% endblock %}

{% block body %}
<div class="max-w-6xl mx-auto">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-4xl font-bold text-gray-800">Gestion des thèmes</h1>
        <a href="{{ path('admin_games_create') }}" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg transition">
            + Nouveau thème
        </a>
    </div>

    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        {% if games is empty %}
            <div class="p-8 text-center text-gray-600">
                <p class="text-xl mb-4">Aucun thème créé</p>
                <a href="{{ path('admin_games_create') }}" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg transition">
                    Créer le premier thème
                </a>
            </div>
        {% else %}
            <table class="w-full">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="px-6 py-3 text-left text-gray-700 font-semibold">Titre</th>
                        <th class="px-6 py-3 text-left text-gray-700 font-semibold">Image</th>
                        <th class="px-6 py-3 text-right text-gray-700 font-semibold">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for game in games %}
                        <tr class="border-t hover:bg-gray-50">
                            <td class="px-6 py-4">{{ game.title }}</td>
                            <td class="px-6 py-4">{{ game.welcomeImg }}</td>
                            <td class="px-6 py-4 text-right space-x-2">
                                <a href="{{ path('admin_enigmas', {id: game.id}) }}" class="text-blue-600 hover:text-blue-800">
                                    Énigmes
                                </a>
                                <a href="{{ path('admin_games_edit', {id: game.id}) }}" class="text-blue-600 hover:text-blue-800">
                                    Modifier
                                </a>
                                <form method="post" action="{{ path('admin_games_delete', {id: game.id}) }}" class="inline" onsubmit="return confirm('Confirmer la suppression ?');">
                                    <button type="submit" class="text-red-600 hover:text-red-800">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
</div>
{% endblock %}
