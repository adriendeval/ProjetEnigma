{% extends 'base.html.twig' %}

{% block title %}Énigmes - {{ game.title }} - Projet Enigma{% endblock %}

{% block body %}
<div class="max-w-6xl mx-auto">
    <div class="mb-6">
        <a href="{{ path('admin_games') }}" class="text-blue-600 hover:text-blue-800"><i class="fi fi-rs-arrow-small-left"></i> Retour aux thèmes</a>
    </div>

    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-4xl font-bold text-gray-800">Énigmes</h1>
            <p class="text-gray-600">Thème : {{ game.title }}</p>
        </div>
        <a href="{{ path('admin_enigmas_create', {gameId: game.id}) }}" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg transition">
            + Nouvelle énigme
        </a>
    </div>

    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        {% if enigmas is empty %}
            <div class="p-8 text-center text-gray-600">
                <p class="text-xl mb-4">Aucune énigme créée</p>
                <a href="{{ path('admin_enigmas_create', {gameId: game.id}) }}" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg transition">
                    Créer la première énigme
                </a>
            </div>
        {% else %}
            <table class="w-full">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="px-6 py-3 text-left text-gray-700 font-semibold">Ordre</th>
                        <th class="px-6 py-3 text-left text-gray-700 font-semibold">Titre</th>
                        <th class="px-6 py-3 text-left text-gray-700 font-semibold">Type</th>
                        <th class="px-6 py-3 text-right text-gray-700 font-semibold">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for enigma in enigmas %}
                        <tr class="border-t hover:bg-gray-50">
                            <td class="px-6 py-4 font-bold">{{ enigma.order }}</td>
                            <td class="px-6 py-4">{{ enigma.title }}</td>
                            <td class="px-6 py-4">
                                <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded">{{ enigma.type.label }}</span>
                            </td>
                            <td class="px-6 py-4 text-right space-x-2">
                                <a href="{{ path('admin_enigmas_edit', {id: enigma.id}) }}" class="text-blue-600 hover:text-blue-800">
                                    Modifier
                                </a>
                                <form method="post" action="{{ path('admin_enigmas_delete', {id: enigma.id}) }}" class="inline" onsubmit="return confirm('Confirmer la suppression ?');">
                                    <button type="submit" class="text-red-600 hover:text-red-800">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
</div>
{% endblock %}
