{% extends 'base.html.twig' %}

{% block title %}En attente - Projet Enigma{% endblock %}

{% block body %}
<div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-lg shadow-lg p-8 text-center">
        <div class="mb-6">
            <img src="{{ asset('images/avatars/' ~ team.avatar.filename) }}" alt="Avatar" class="w-32 h-32 mx-auto mb-4 object-contain">
            <h1 class="text-3xl font-bold text-gray-800">Équipe : {{ team.name }}</h1>
        </div>

        <div class="mb-8">
            <div class="flex justify-center items-center">
            <div class="animate-spin rounded-full h-16 w-16 border-4 border-gray-300 border-t-blue-600"></div>
            </div>
        </div>

        <h2 class="text-2xl text-gray-700 mb-4">En attente du lancement de la partie...</h2>
        <p class="text-gray-600">Le professeur va bientôt lancer le jeu. Patientez quelques instants.</p>
    </div>
</div>

<script>
function checkGameStarted() {
    fetch('{{ path('check_game_started') }}')
        .then(response => response.json())
        .then(data => {
            if (data.started) {
                window.location.href = '{{ path('play_index') }}';
            }
        });
}

setInterval(checkGameStarted, 3000);
</script>
{% endblock %}
